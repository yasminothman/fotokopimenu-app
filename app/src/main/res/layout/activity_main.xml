<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frontpage"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="173dp"
        android:layout_height="0dp"
        android:layout_marginTop="145dp"
        android:layout_marginBottom="101dp"
        app:layout_constraintBottom_toTopOf="@+id/custButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fotokopicircle" />

    <Button
        android:id="@+id/adminButton"
        android:layout_width="116dp"
        android:layout_height="43dp"
        android:layout_marginBottom="322dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:onClick="loginPage"
        android:text="ADMIN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.838" />

    <Button
        android:id="@+id/custButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:onClick="MenuList"
        android:text="CUSTOMER"
        app:layout_constraintBottom_toTopOf="@+id/buttonAbout"
        app:layout_constraintStart_toStartOf="@+id/adminButton"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/buttonAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="216dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:onClick="AboutPage"
        android:text="about"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/custButton"
        app:layout_constraintTop_toBottomOf="@+id/custButton" />

</androidx.constraintlayout.widget.ConstraintLayout>